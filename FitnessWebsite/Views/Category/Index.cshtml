@model List<Category>


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="fa bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>
        <br />
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                <th scope="col">
                        Category Name
                    </th>
                <th scope="col">
                        Display Order
                    </th>
                    <th class="w-25" scope="col"></th>
                </tr>
            </thead>
    
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
             {
              <tr>
                 <td >@obj.Name</td>
                 <td>
                        @obj.DisplayOrder
                 </td>
                 <td>
                     <div class="w-45 btn-group" role="group">
                         <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="w-40 btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"> EDIT</i>
                         </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"> Delete</i>
                            </a>
                     </div>
                 </td>
              </tr>
             }

        </tbody>
        </table>
        </div>
    
       
